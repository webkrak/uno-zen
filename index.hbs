{{!< default}}

<ol class="posts">
  {{#foreach posts}}
    <li>
      <a href="{{url}}" title="link to {{{title}}}">
        <h2>{{{title}}}</h2>
        <p class="post description">{{excerpt}}&hellip;</p>
      </a>
      <div class="post meta">
        <time datetime="{{date format="DD.MM.YYYY"}}">{{date format="DD.MM.YYYY"}}</time>
        <span class="post tags">{{tags prefix="~ " separator=" "}}</span>
      </div>
      <hr class="divider post" />
    </li>
  {{/foreach}}
</ol>

{{pagination}}
